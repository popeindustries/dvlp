{
  "name": "dvlp",
  "version": "14.2.2",
  "description": "A no-nonsense dev server toolkit to help you develop quickly and easily for the web",
  "main": "./src/dvlp.js",
  "type": "module",
  "types": "dvlp.d.ts",
  "repository": "https://github.com/popeindustries/dvlp.git",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "license": "MIT",
  "bin": {
    "dvlp": "bin/dvlp.js"
  },
  "exports": {
    ".": "./src/dvlp.js",
    "./test-browser": "./src/dvlp-test-browser.js",
    "./dvlp-test-browser.js": "./src/dvlp-test-browser.js",
    "./test": "./src/dvlp-test.js",
    "./dvlp-test.js": "./src/dvlp-test.js"
  },
  "publishConfig": {
    "main": "./dvlp.js",
    "exports": {
      ".": "./dvlp.js",
      "./test-browser": "./dvlp-test-browser.js",
      "./dvlp-test-browser.js": "./dvlp-test-browser.js",
      "./test": "./dvlp-test.js",
      "./dvlp-test.js": "./dvlp-test.js"
    }
  },
  "dependencies": {
    "commander": "^9.3.0",
    "esbuild": "~0.14.47"
  },
  "devDependencies": {
    "@fidm/x509": "^1.2.1",
    "@types/debug": "^4.1.7",
    "@types/glob": "^7.2.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^18.0.0",
    "@types/platform": "^1.3.4",
    "@types/rimraf": "^3.0.2",
    "@types/send": "^0.17.1",
    "chai": "^4.3.6",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "cjs-module-lexer": "^1.2.2",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "es-module-lexer": "~0.10.5",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eventsource": "^2.0.2",
    "fastify": "^4.1.0",
    "fastify-static": "^4.7.0",
    "faye-websocket": "~0.11.4",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "is-file-esm": "^1.0.0",
    "lint-staged": "^13.0.2",
    "lit-html": "^2.2.6",
    "mime": "^3.0.0",
    "mocha": "^10.0.0",
    "node-fetch": "^3.2.6",
    "path-to-regexp": "^6.2.1",
    "permessage-deflate": "~0.1.7",
    "platform": "^1.3.6",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "resolve.exports": "^1.1.0",
    "rimraf": "^3.0.2",
    "send": "~0.18.0",
    "server-destroy": "^1.0.1",
    "terser": "^5.14.1",
    "typescript": "^4.7.4",
    "undici": "^5.5.1"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f",
    "format": "prettier --write './{src,test}/**/*.{js,json}'",
    "lint": "npm run lint:src && npm run lint:types",
    "lint:src": "eslint './{src,test}/**/*.js'",
    "lint:types": "tsc --noEmit --skipLibCheck --project jsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "cross-env NODE_ENV=dvlptest NODE_OPTIONS=\"--enable-source-maps --no-warnings\" NODE_TLS_REJECT_UNAUTHORIZED=\"0\" mocha test/unit/*-test.js --reporter spec --exit --bail --timeout 10000",
    "test:browser": "npm run build && ./bin/dvlp.js --mock test/browser/fixtures/mock test/browser",
    "test:integration": "npm run build && cross-env NODE_ENV=dvlptest mocha test/integration/*-test.js --reporter spec --exit --timeout 10000",
    "prepare": "husky install"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ]
  },
  "files": [
    "bin",
    "*.d.ts",
    "*.js",
    "README.MD"
  ]
}
