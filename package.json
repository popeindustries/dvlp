{
  "name": "dvlp",
  "version": "15.0.1",
  "description": "A no-nonsense dev server toolkit to help you develop quickly and easily for the web",
  "main": "./src/dvlp.js",
  "type": "module",
  "types": "dvlp.d.ts",
  "repository": "https://github.com/popeindustries/dvlp.git",
  "author": "Alexander Pope <alex@pope.industries>",
  "license": "MIT",
  "bin": {
    "dvlp": "bin/dvlp.js"
  },
  "exports": {
    ".": "./src/dvlp.js",
    "./internal": "./src/dvlp-internal.js",
    "./dvlp-internal.js": "./src/dvlp-internal.js",
    "./resolver": "./src/resolver/index.js",
    "./test-browser": "./src/dvlp-test-browser.js",
    "./dvlp-test-browser.js": "./src/dvlp-test-browser.js",
    "./test": "./src/dvlp-test.js",
    "./dvlp-test.js": "./src/dvlp-test.js"
  },
  "publishConfig": {
    "main": "./dvlp.js",
    "exports": {
      ".": "./dvlp.js",
      "./internal": "./dvlp-internal.js",
      "./dvlp-internal.js": "./dvlp-internal.js",
      "./test-browser": "./dvlp-test-browser.js",
      "./dvlp-test-browser.js": "./dvlp-test-browser.js",
      "./test": "./dvlp-test.js",
      "./dvlp-test.js": "./dvlp-test.js"
    }
  },
  "dependencies": {
    "commander": "^11.0.0",
    "esbuild": "~0.18.4"
  },
  "devDependencies": {
    "@fidm/x509": "^1.2.1",
    "@types/debug": "^4.1.8",
    "@types/glob": "^8.1.0",
    "@types/mime": "^3.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/platform": "^1.3.4",
    "@types/send": "^0.17.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.7",
    "chalk": "^5.2.0",
    "chokidar": "^3.5.3",
    "cjs-module-lexer": "^1.2.3",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "electron": "^25.1.1",
    "es-module-lexer": "~1.3.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eventsource": "^2.0.2",
    "fast-glob": "^3.2.12",
    "fastify": "^4.18.0",
    "fastify-static": "^4.7.0",
    "faye-websocket": "~0.11.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "lit-html": "^2.7.4",
    "mime": "^3.0.0",
    "mocha": "^10.2.0",
    "node-fetch": "^3.3.1",
    "path-to-regexp": "^6.2.1",
    "permessage-deflate": "~0.1.7",
    "platform": "^1.3.6",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "resolve.exports": "^2.0.2",
    "send": "~0.18.0",
    "server-destroy": "^1.0.1",
    "terser": "^5.18.0",
    "typescript": "^5.1.3",
    "undici": "^5.22.1"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "pnpm": {
    "overrides": {
      "debug": "^4.3.4"
    }
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "clean": "git clean -x -f",
    "format": "prettier --write './{src,test}/**/*.{js,json}'",
    "lint": "pnpm run lint:src && pnpm run lint:types",
    "lint:src": "eslint './{src,test}/**/*.js'",
    "lint:types": "tsc --noEmit --skipLibCheck ",
    "prepublishOnly": "pnpm run build",
    "test": "cross-env NODE_ENV=dvlptest NODE_OPTIONS=\"--enable-source-maps --no-warnings\" NODE_TLS_REJECT_UNAUTHORIZED=\"0\" mocha test/unit/*-test.js --reporter spec --bail --exit --timeout 10000 --require ./test/unit/init.js",
    "test:browser": "pnpm run build && ./bin/dvlp.js --mock test/browser/fixtures/mock test/browser",
    "test:integration": "pnpm run build && cross-env NODE_ENV=dvlptest mocha test/integration/*-test.js --reporter spec --exit --timeout 10000",
    "prepare": "husky install"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ]
  },
  "files": [
    "bin",
    "*.d.ts",
    "*.js",
    "*.cjs",
    "README.MD"
  ]
}
