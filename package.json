{
  "name": "dvlp",
  "version": "12.2.4",
  "description": "A no-nonsense dev server toolkit to help you develop quickly and easily for the web",
  "main": "dvlp.js",
  "browser": "dvlp-browser.js",
  "types": "dvlp.d.ts",
  "repository": "https://github.com/popeindustries/dvlp.git",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "license": "MIT",
  "private": false,
  "bin": {
    "dvlp": "bin/dvlp"
  },
  "dependencies": {
    "commander": "^7.0.0",
    "esbuild": "^0.11.1"
  },
  "devDependencies": {
    "@fidm/x509": "^1.2.1",
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.3",
    "@types/mime": "^2.0.3",
    "@types/node": "^14.14.10",
    "@types/platform": "^1.3.3",
    "@types/rimraf": "^3.0.0",
    "@types/send": "^0.14.5",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chalk": "^4.0.0",
    "chokidar": "^3.4.2",
    "cjs-module-lexer": "^1.0.0",
    "cross-env": "^7.0.3",
    "debug": "^4.2.0",
    "es-module-lexer": "^0.3.25",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eventsource": "^1.0.7",
    "faye-websocket": "^0.11.3",
    "glob": "^7.1.5",
    "husky": "^5.0.9",
    "is-file-esm": "^1.0.0",
    "koa": "2.13.0",
    "koa-send": "5.0.1",
    "lint-staged": "^10.4.0",
    "lit-html": "^1.3.0",
    "lodash": "4.17.20",
    "mime": "^2.4.5",
    "mocha": "^8.1.3",
    "node-fetch": "^2.6.0",
    "path-to-regexp": "^6.2.0",
    "permessage-deflate": "^0.1.7",
    "pirates": "^4.0.1",
    "platform": "^1.3.6",
    "prettier": "^2.2.0",
    "react": "^17.0.0",
    "rimraf": "^3.0.0",
    "sass": "^1.27.0",
    "send": "^0.17.1",
    "server-destroy": "^1.0.1",
    "terser": "^5.5.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "format": "prettier --write './{src,test}/**/*.{js,json}'",
    "lint": "npm run lint:types && npm run lint:src",
    "lint:src": "eslint './{src,test}/**/*.js'",
    "lint:types": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "cross-env NODE_ENV=dvlptest mocha test/*-test.js --reporter spec --exit --timeout 10000 --require src/config.js",
    "test:browser": "npm run build && ./bin/dvlp --mock test-browser/fixtures/mock test-browser",
    "demo": "./bin/dvlp test/fixtures/app.js"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ]
  },
  "files": [
    "bin",
    "dvlp*",
    "*.js",
    "README.MD"
  ]
}
