{
  "name": "dvlp",
  "version": "8.1.0",
  "description": "A no-nonsense dev server toolkit to help you develop quickly and easily for the web",
  "main": "dvlp.js",
  "types": "dvlp.d.ts",
  "repository": "https://github.com/popeindustries/dvlp.git",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "license": "MIT",
  "private": false,
  "bin": {
    "dvlp": "./bin/dvlp"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-replace": "^2.3.0",
    "chalk": "^4.0.0",
    "chokidar": "^3.1.0",
    "commander": "^5.0.0",
    "debug": "^4.1.1",
    "faye-websocket": "^0.11.3",
    "get-port": "^5.1.1",
    "glob": "^7.1.5",
    "is-module": "^1.0.0",
    "mime": "^2.4.4",
    "path-to-regexp": "^6.1.0",
    "permessage-deflate": "^0.1.7",
    "pirates": "^4.0.1",
    "rimraf": "^3.0.0",
    "rollup": "^2.1.0",
    "send": "^0.17.1",
    "server-destroy": "^1.0.1",
    "sucrase": "^3.12.1",
    "worker-farm": "^1.7.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.1",
    "@types/mime": "^2.0.1",
    "@types/rimraf": "^3.0.0",
    "@types/send": "^0.14.5",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eventsource": "^1.0.7",
    "husky": "^4.2.5",
    "koa": "^2.11.0",
    "koa-send": "^5.0.0",
    "lint-staged": "^10.1.3",
    "lit-html": "^1.2.1",
    "lodash": "^4.17.15",
    "mocha": "^7.1.1",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "sass": "^1.26.3",
    "terser": "^4.6.11",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "format": "prettier --write './{src,test}/**/*.{js,json}'",
    "lint": "tsc --noEmit && eslint './{src,test}/**/*.js'",
    "prepublishOnly": "npm run build",
    "test": "NODE_ENV=test mocha test/*-test.js --reporter spec --bail --exit --timeout 10000 --require src/config.js",
    "test:browser": "npm run build && ./bin/dvlp --mock test-browser/fixtures/mock test-browser",
    "demo": "./bin/dvlp test/fixtures/app.js"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ]
  }
}
