{
  "name": "dvlp",
  "version": "10.2.3",
  "description": "A no-nonsense dev server toolkit to help you develop quickly and easily for the web",
  "main": "dvlp.js",
  "browser": "dvlp-browser.js",
  "types": "dvlp.d.ts",
  "repository": "https://github.com/popeindustries/dvlp.git",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "license": "MIT",
  "private": false,
  "bin": {
    "dvlp": "./bin/dvlp"
  },
  "**NOTES-ON-DEPENDENCY-VERSIONS**": {
    "@rollup/plugin-commonjs": "error with external import on 15.0.0",
    "terser": "async api incompatible with Rollup build on 5.0.0"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@rollup/plugin-virtual": "^2.0.2",
    "chalk": "^4.0.0",
    "chokidar": "^3.4.2",
    "commander": "^6.1.0",
    "debug": "^4.1.1",
    "es-module-lexer": "^0.3.25",
    "faye-websocket": "^0.11.3",
    "glob": "^7.1.5",
    "is-module": "^1.0.0",
    "mime": "^2.4.5",
    "path-to-regexp": "^6.1.0",
    "permessage-deflate": "^0.1.7",
    "pirates": "^4.0.1",
    "platform": "^1.3.6",
    "rimraf": "^3.0.0",
    "rollup": "^2.26.9",
    "send": "^0.17.1",
    "server-destroy": "^1.0.1",
    "sucrase": "^3.15.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.3",
    "@types/mime": "^2.0.3",
    "@types/platform": "^1.3.3",
    "@types/rimraf": "^3.0.0",
    "@types/send": "^0.14.5",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eventsource": "^1.0.7",
    "husky": "^4.2.5",
    "koa": "^2.13.0",
    "koa-send": "^5.0.1",
    "lint-staged": "^10.2.13",
    "lit-html": "^1.3.0",
    "lodash": "^4.17.20",
    "mocha": "^8.1.3",
    "node-fetch": "^2.6.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "sass": "^1.26.10",
    "terser": "4.8.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "format": "prettier --write './{src,test}/**/*.{js,json}'",
    "lint": "npm run lint:types && npm run lint:src",
    "lint:src": "eslint './{src,test}/**/*.js'",
    "lint:types": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "NODE_ENV=dvlptest mocha test/*-test.js --reporter spec --bail --exit --timeout 10000 --require src/config.js",
    "test:browser": "npm run build && ./bin/dvlp --mock test-browser/fixtures/mock test-browser",
    "demo": "./bin/dvlp test/fixtures/app.js"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ]
  }
}
